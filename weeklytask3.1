def personalized_greeting(given_name, family_name=None):
    """
    Generates a greeting based on the given name and optional family name.
    """
    if family_name:
        greeting = f"Hello there, {given_name} of {family_name}!"
    else:
        greeting = f"Hello {given_name}."

    print(greeting)

def main():
    """
    Main function to demonstrate the personalized greeting.
    """
    print("Welcome to the Personalized Greeting Generator")

    # User inputs for given name and optionally for family name
    given_name = input("Please enter your given name: ")
    family_name = input("Optionally, enter your family name (or press Enter to skip): ")

    # Generate and display the greeting
    personalized_greeting(given_name, family_name if family_name.strip() != "" else None)

if __name__ == "__main__":
    main()
